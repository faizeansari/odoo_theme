<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Customize header  -->
    <template id="custom_header" inherit_id="website.layout" name="Custom Header">

      <!-- Assign an id  -->
      <xpath expr="//div[@id='wrapwrap']/header" position="attributes">
        <attribute name="id">testing_attr_name</attribute>
      </xpath>
        <xpath expr="//div[@id='wrapwrap']/header" position="replace">
            <!-- Topbar-->
            <div class="container">
                <div class="row py-2 align-items-center">
                    <div class="col-12 col-sm-2">
                        <div class="logo">
                            <img src="/theme_tutorial/static/src/img/logo.png" alt="Logo"/>
                        </div>
                    </div>
                    <div class="col-12 col-sm-10">
                        <div class="row align-items-center">
                            <div class="col-sm-7 top-nav my-2 my-sm-0">
                                <h6>Toll Free +92 3 336662</h6>
                                <nav class="nav top-nav">
                                    <a class="nav-link" href="#">Login</a>
                                    <a class="nav-link" href="#">My Account</a>
                                    <a class="nav-link" href="#">Cart</a>
                                </nav>
                            </div>
                            <div class="col-sm-5">
                                <div class="input-group border">
                                    <input type="text" class="form-control border-0" placeholder="Quick Search"/>
                                    <div class="input-group-append">
                                        <button class="btn bg-white" type="button"><i class="fa fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Header -->
            <nav class="navbar navbar-expand-md navbar-light bg-light bg-header">
                <div class="container">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="#">Featured</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Juices</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Groceries
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <ul class="container">
                                        <li class="nav-item">
                                            <a class="nav-link" href="#">Best Seller</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#">Stock Cleaner</a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Vegitables
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <ul class="container">
                                        <li class="nav-item">
                                            <a class="nav-link" href="#">Tomatos</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#">Potatos</a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </xpath>
    </template>
    <template id="frankie_website_template" name="Home page" inherit_id="website.homepage">
